{{#if addNewQuestion}}
  <h2>New Question:</h2>
  <form class="well">
    <div class="form-group">
      <label for="author">Author: </label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Question Content: </label>
      {{input value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="notes">Notes(e.g. links or citations): </label>
      {{input value=notes id="notes"}}
    </div>
    <button {{action 'saveQuestion'}}>Ask!</button>
  </form>
{{else}}
  <button {{action 'questionFormShow'}}>Ask a Question</button>
{{/if}}
