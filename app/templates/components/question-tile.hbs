<li>
  {{question.author}} asked: <em>{{question.content}}</em>
  {{#if areAnswersShowing}}
    {{#each model as |answer|}}
      {{answer-tile answer=answer}}
    {{/each}}
  {{else}}
    <button {{action 'answersToggle'}}>See/Hide Answers</button>
  {{/if}}
  {{answer-question question=question answer="answer"}}
</li>
