{{#if answerQuestion}}
  <h2>Add an Answer:</h2>
  <form class="well">
    <div class="form-group">
      <label for="author">Answer Author: </label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="content">Answer Content: </label>
      {{input value=content id="content"}}
    </div>
    <button {{action 'addAnswer'}}>Answer!</button>
  </form>
{{else}}
  <button {{action 'answerFormShow'}}>Answer This Question!</button>
{{/if}}
